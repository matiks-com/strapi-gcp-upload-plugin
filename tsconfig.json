{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "outDir": "./dist",                                  
    "rootDir": "./src",                                  
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"],                                  
  "exclude": ["node_modules"]
} 
